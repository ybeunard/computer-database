node("docker") {
    docker.withRegistry('TomcatContainer', '') {
    
        git url: "https://github.com/ybeunard/computer-database", credentialsId: 'git_credential'
    
        sh "git rev-parse HEAD > .git/commit-id"
        def commit_id = readFile('.git/commit-id').trim()
        println commit_id
    
        stage "build"
        def app = docker.build "computerDatabase"
    
        stage "publish"
        app.push 'master'
        app.push "${commit_id}"
    }
}
