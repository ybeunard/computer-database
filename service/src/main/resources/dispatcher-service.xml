   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
   <context:annotation-config/>
   
	<bean name="computerService" class="com.cdb.services.Impl.ComputerService" scope="singleton">
	</bean>
	
	<bean name="companyService" class="com.cdb.services.Impl.CompanyService" scope="singleton">
	</bean>
	
	<bean name="userService" class="com.cdb.services.Impl.UserService" scope="singleton">
	</bean>
	
</beans>